<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Captured Image Display -->
    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <!-- Enhanced Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/black_semi_transparent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <!-- Resolution Toggle -->
        <Button
            android:id="@+id/resolutionButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded"
            android:text="ULTRA-RES"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Enhanced Focus Button -->
        <Button
            android:id="@+id/focusButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded"
            android:text="FOCUS"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Zoom Level Display -->
        <TextView
            android:id="@+id/zoomLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2.0x"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Zoom Controls -->
    <LinearLayout
        android:id="@+id/zoomControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/zoomInButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_circle"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/zoomOutButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_circle"
            android:text="âˆ’"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/zoomResetButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_circle"
            android:text="1x"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_semi_transparent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_rounded"
            android:text="BACK"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Capture Button -->
        <Button
            android:id="@+id/captureButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_capture"
            android:text="CAPTURE"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Enhanced Detection Button -->
        <Button
            android:id="@+id/readBarcodesButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button_rounded"
            android:text="ENHANCED\nDETECTION"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>