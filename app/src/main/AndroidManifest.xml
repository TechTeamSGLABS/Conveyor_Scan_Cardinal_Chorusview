<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Existing Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- ðŸš€ ENHANCED: Wake lock and screen management permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- ðŸ†• NEW: Additional permissions for screen management -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.TURN_SCREEN_ON" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Camera Features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- ðŸ”„ UPDATED: DashboardActivity is now the main launcher -->
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity - Live View Scanning -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="QICSCAN Live View"
            android:parentActivityName=".ui.DashboardActivity"
            android:keepScreenOn="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
        </activity>

        <!-- ðŸ“· PhotoCaptureActivity - Photo-based Scanning -->
        <activity
            android:name=".ui.PhotoCaptureActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="QICSCAN Photo Capture"
            android:parentActivityName=".ui.DashboardActivity"
            android:keepScreenOn="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
        </activity>

        <!-- ResultsActivity - Shows scan results for Live View and Photo Capture -->
        <activity
            android:name=".ui.ResultsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Scan Results"
            android:parentActivityName=".ui.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
        </activity>

        <!-- ðŸš€ ENHANCED: ConveyerScanActivity with wake lock features -->
        <activity
            android:name=".ui.ConveyerScanActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Conveyer Scan"
            android:parentActivityName=".ui.DashboardActivity"
            android:keepScreenOn="true"
            android:launchMode="singleTask"
            android:excludeFromRecents="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DashboardActivity" />
        </activity>

        <!-- ðŸš€ NEW: ConveyerResultsActivity - Shows conveyer scan results -->
        <activity
            android:name=".ui.ConveyerResultsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Conveyer Results"
            android:parentActivityName=".ui.ConveyerScanActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ConveyerScanActivity" />
        </activity>

        <!-- ðŸš€ ENHANCED: CloudSyncService with wake lock capability -->
        <service
            android:name=".service.CloudSyncService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>